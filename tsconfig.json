{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "esnext.bigint"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "outDir": "build/dist",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "module": "commonjs"
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
